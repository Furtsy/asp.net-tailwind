@page "/counter"

<PageTitle>Counter</PageTitle>

<div class="py-10">
    <h1 class="text-4xl font-extrabold text-white text-center mb-4">Counter</h1>
    <p role="status" class="text-xl text-white text-center mb-4">Current count: @currentCount</p>

    <div class="flex justify-center items-center h-full">
    <button class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded" @onclick="IncrementCount">Click me</button>
</div>
</div>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}